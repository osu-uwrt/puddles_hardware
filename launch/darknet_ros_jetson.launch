<launch>
  
  <machine address="jetson" name="jetson" user="ros" env-loader="~/osu-uwrt/riptide_software/src/riptide_utilities/baycat_master.sh"/>
	<arg name="machine_name" default="jetson"/>

  <!-- Console launch prefix -->
  <arg name="launch_prefix" default=""/>

  <!-- Config and weights folder -->
  <arg name="jetson_software"            value="/home/ros/ssd/osu-uwrt/riptide_software" />
  <arg name="jetson_weights_dir"         value="$(arg jetson_software)/yolo_weights" />
  <arg name="yolo_weights_path"          default="$(arg jetson_weights_dir)"/>
  <arg name="yolo_config_path"           default="$(arg jetson_software)/src/puddles_hardware/cfg"/>

  <!-- Load parameters -->
  <rosparam command="load" ns="darknet_ros" file="$(find riptide_hardware)/cfg/darknet_params.yaml"/>
  <rosparam command="load" ns="darknet_ros" file="$(find riptide_hardware)/cfg/darknet_model.yaml"/>

  <!-- Start darknet and ros wrapper -->
  <node machine="$(arg machine_name)" pkg="darknet_ros" type="darknet_ros" name="darknet_ros" output="screen" launch-prefix="$(arg launch_prefix)">
    <param name="weights_path"          value="$(arg yolo_weights_path)" />
    <param name="config_path"           value="$(arg yolo_config_path)" />
  </node>

  <!--<node name="republish" type="republish" pkg="image_transport" output="screen" 	args="compressed in:=/front_camera/image_raw raw out:=/camera/image_raw" /> -->
</launch>
