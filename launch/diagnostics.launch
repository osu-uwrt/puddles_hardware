<launch>
  <machine address="localhost" name="local" />
  <arg name="computer" default="local" />

  <node pkg="riptide_hardware" type="computer_monitor.py" name="$(arg computer)_monitor" output="screen" machine="$(arg computer)" />

  <node pkg="diagnostic_aggregator" type="aggregator_node"
        name="diagnostic_aggregator" >
    <!-- Load the file you made above -->
    <rosparam command="load" 
              file="$(find riptide_hardware)/cfg/diagnostic_analyzers.yaml" />
  </node>
</launch>
